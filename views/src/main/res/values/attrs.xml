<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleLayout">
        <attr name="clock_arcWidth" format="dimension|reference" />
        <attr name="clock_rangeArcStartColor" format="color|reference" />
        <attr name="clock_rangeArcEndColor" format="color|reference" />
        <attr name="clock_boundsArcColor" format="color|reference" />
        <attr name="clock_segmentsDivisionLineLength" format="dimension|reference" />
        <attr name="clock_segmentsDivisionLineWidth" format="dimension|reference" />
        <attr name="clock_segmentsDivisionLineColor" format="color|reference" />
        <attr name="clock_segmentsDivisionOffset" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CircleLayout_Layout">
        <attr name="layout_degree" format="integer|reference" />
        <attr name="layout_role" format="enum">
            <!--A role for the view inside circle layout.
            This means that the view will be layout as an Render layer.
            Much the same as inside FrameLayout-->
            <enum name="layer" value="0" />

            <!--A role that defines a view that will be stick to the orbit
            so that all circle attributes will be applied to it-->
            <enum name="handler" value="1" />

            <!--A special role of views that can receives all the information
            about all the handlers inside the layout so that it can draw some context graphics for them
            based on their information and more. See CircleLayout for more details.
            Such views will be layout in same way as views with "layer" role.-->
            <enum name="contextDrawer" value="2" />
        </attr>
    </declare-styleable>
</resources>